{
  "version": 2,
  "functions": {
    "api/index.ts": {
      "runtime": "@vercel/node@3.2.29",
      "maxDuration": 30,
      "includeFiles": "generated/**"
    }
  },
  "outputDirectory": ".",
  "installCommand": "bun install && bun run prisma generate",
  "rewrites": [
    {
      "source": "/api/trpc/:path*",
      "destination": "/api"
    },
    {
      "source": "/api/sync/:path*",
      "destination": "/api"
    },
    {
      "source": "/api/jobs/:path*",
      "destination": "/api"
    },
    {
      "source": "/health",
      "destination": "/api"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "https://animesenpai.app",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/sync/anime-data",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/sync/calendar",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/jobs/session-cleanup",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/jobs/token-cleanup",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/jobs/trending-update",
      "schedule": "0 * * * *"
    }
  ]
}
