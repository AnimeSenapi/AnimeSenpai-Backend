# Database (RECOMMENDED: Use Accelerate proxy URL)
# Get your Accelerate connection string from: https://console.prisma.io/
# Simply set DATABASE_URL to your prisma:// URL and Accelerate will be enabled automatically
DATABASE_URL="prisma://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"

# Alternative: Direct PostgreSQL connection (without Accelerate)
# DATABASE_URL="postgresql://user:password@host:5432/database"

# Prisma Accelerate (optional - only needed if using separate proxy URL)
# If you want to keep direct connection available for migrations/troubleshooting:
# PRISMA_ACCELERATE_URL="prisma://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"
# DATABASE_URL="postgresql://user:password@host:5432/database"
# 
# Or enable Accelerate with direct connection only (no global caching):
# ENABLE_ACCELERATE="true"
# DATABASE_URL="postgresql://user:password@host:5432/database"

# Prisma Optimize (optional)
# Get your API key from: https://console.prisma.io/optimize
# Optimize helps analyze and optimize your Prisma queries for better performance
# OPTIMIZE_API_KEY="your-optimize-api-key-here"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here-change-this-in-production"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# API Configuration
API_PORT=3001
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"

# CORS Origins (for production)
CORS_ORIGINS="http://localhost:3000,https://animesenpai.app"

# Email Configuration (Resend)
RESEND_API_KEY="re_your_resend_api_key_here"
EMAIL_FROM="noreply@animesenpai.app"
EMAIL_FROM_NAME="AnimeSenpai"

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET="your-session-secret-here-change-this-in-production"

# GDPR & Privacy
PRIVACY_POLICY_URL="https://animesenpai.app/privacy"
TERMS_OF_SERVICE_URL="https://animesenpai.app/terms"
DATA_RETENTION_DAYS=365

# Cache Configuration
CACHE_MAX_SIZE="10000"
CACHE_DEFAULT_TTL="1800"
CACHE_CLEANUP_INTERVAL="300000"
CACHE_MAX_MEMORY_MB="100"

# Logging Configuration
LOG_LEVEL="info"
QUIET_MODE="false"
ENABLE_REQUEST_LOGGING="true"
ENABLE_PERFORMANCE_LOGGING="false"
ENABLE_SECURITY_LOGGING="true"
ENABLE_CACHE_LOGGING="false"
ENABLE_DATABASE_LOGGING="false"
ENABLE_MONITORING_LOGGING="false"
ENABLE_SYSTEM_LOGGING="true"

# Vercel Configuration
VERCEL_URL=""

# Sync Jobs Configuration
# Secret token for authenticating sync job requests (required for external cron services)
# Generate a strong random token: openssl rand -hex 32
SYNC_SECRET_TOKEN="your-sync-secret-token-here-change-this-in-production"

# Vercel Cron Jobs Configuration
# Secret token for authenticating Vercel cron job requests (recommended for Vercel deployments)
# Vercel will automatically send this value as Authorization header when invoking cron jobs
# Generate a strong random token: openssl rand -hex 32
# If not set, SYNC_SECRET_TOKEN will be used as fallback
CRON_SECRET="your-cron-secret-token-here-change-this-in-production"
